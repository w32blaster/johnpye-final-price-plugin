{
  "manifest_version": 3,
  "name": "John Pye Final Price Calculator",
  "version": "1.0.2",
  "description": "Calculates and displays the final price (minimum bid + delivery) on John Pye Auctions lot detail pages",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.johnpyeauctions.co.uk/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.johnpyeauctions.co.uk/Event/LotDetails/*"
      ],
      "js": [
        "lib/webextension-polyfill.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "John Pye Final Price Calculator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://www.johnpyeauctions.co.uk/*"]
    }
  ],
  "minimum_chrome_version": "88"
}