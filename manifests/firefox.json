{
  "manifest_version": 2,
  "name": "John Pye Final Price Calculator",
  "version": "1.0.1",
  "description": "Calculates and displays the final price (minimum bid + delivery) on John Pye Auctions lot detail pages",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://www.johnpyeauctions.co.uk/Event/LotDetails/*"
      ],
      "js": [
        "lib/webextension-polyfill.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "icons/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "data_collection_permissions": {
          "required": ["none"],
          "optional": []
         }
    }
  }
}
